{% extends "layouts/app.twig" %}

{% block pageTitle %}Главная страница{% endblock %}
{% block content %}
    <div class="b-page-content">
        <div class="b-catalog stucco-bg">
            <div class="mb20">
                {% include "widgets/breadcrumb.twig" %}
            </div>
            <div class="uk-container uk-container-center">
                <div class="mb50 tac m-mb20">
                    <p class="preview__title content-title txt-brown">Каталог строительной и дорожной спецтехники</p>
                </div>
                <div class="b-catalog__contain">
                    <div class="b-catalog__contain-sidebar">
                        {% for i in 1..2 %}
                            <div class="b-catalog__contain-sidebar-item">
                                <ul class="uk-nav uk-nav-parent-icon" data-uk-nav="{multiple:true}">
                                    <li class="uk-parent">
                                        <a class="b-catalog__contain-sidebar-item-title fz18 lh22" href="#">Колесные экскаваторы</a>
                                        <ul class="b-catalog__contain-sidebar-item-contain uk-nav-sub fz18 txt-black">
                                            <li><a href="#">Экскаватор 1</a></li>
                                            <li><a href="#">Экскаватор 2</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="b-catalog__contain-main">
                        {% for i in 1..2 %}
                            <div class="b-catalog__contain-main-item ovh">
                                <div class="b-catalog__contain-main-img">
                                    <div class="mb15">
                                        <a href="#" class="txt-brown tdu fz25 lh25 mb15">Камаз</a>
                                    </div>
                                    <div class="img-wrapper mb22">
                                        <img src="http://placehold.it/200x135" alt="">
                                    </div>
                                    <a href="#" class="btn db orange_btn tac fz25 lh30 f-base">Заказать</a>
                                </div>
                                <div class="b-catalog__contain-main-info">
                                    <div class="mb27">
                                        <div class="b-catalog__contain-main-info-item fz20 txt-black">
                                            <span>Эксплуатационная масс:&nbsp;</span>
                                            <span></span>
                                            <span>20000 кг</span>
                                        </div>
                                        <div class="b-catalog__contain-main-info-item fz20 txt-black">
                                            <span>Емкость ковша:&nbsp;</span>
                                            <span></span>
                                            <span>1м3</span>
                                        </div>
                                        <div class="b-catalog__contain-main-info-item fz20 txt-black">
                                            <span>Максимальная глубина копания:&nbsp;</span>
                                            <span></span>
                                            <span>6,2 м</span>
                                        </div>
                                        <div class="b-catalog__contain-main-info-item fz20 txt-black">
                                            <span>Мощность двигателя:&nbsp;</span>
                                            <span></span>
                                            <span>172 л.с.</span>
                                        </div>
                                    </div>
                                    <div class="font-bold mb15">
                                        <div class="b-catalog__contain-main-info-item">
                                            <span class=""><p class="elaboration">Цена за смену</p>:</span>
                                            <span></span>
                                            <span>от 11 500 руб.</span>
                                        </div>
                                        <div class="b-catalog__contain-main-info-item">
                                            <span class=""><p class="elaboration">Доставка</p>:</span>
                                            <span></span>
                                            <span>от 12 000 руб.</span>
                                        </div>
                                    </div>
                                    <p class="txt-red fz12 lh14">* - Зависит от объёма предполагаемых работ</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>


        </div>
        {% include "widgets/b-stock.twig" %}

    </div>




{% endblock %}